# Login Security
MAX_LOGIN_ATTEMPTS=10
LOGIN_LOCKOUT_DURATION=900
MAX_RESET_ATTEMPTS=5
RESET_RATE_LIMIT_WINDOW=3600
RESET_TOKEN_EXPIRY_HOURS=1

